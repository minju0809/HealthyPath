<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.healthypath.food.FoodDao">

  <!-- 식품명으로 검색 -->
  <select id="searchFoodByName" parameterType="map" resultType="com.springboot.healthypath.food.FoodVO">
    SELECT * FROM foods
    WHERE food_name LIKE CONCAT('%', #{food_name}, '%')
    LIMIT #{page_size} OFFSET #{offset}
  </select>

  <!-- 영양성분으로 검색 -->
  <select id="searchFoodByNutrient" parameterType="map" resultType="com.springboot.healthypath.food.FoodVO">
    SELECT * FROM foods
    ORDER BY ${nutrient_column} DESC
    LIMIT #{page_size} OFFSET #{offset}
  </select>

  <!-- 전체 레코드 수 카운트 -->
  <select id="countTotalRecords" parameterType="map" resultType="int">
    SELECT COUNT(*) FROM foods
    <where>
      <if test="food_name != null">
        food_name LIKE CONCAT('%', #{food_name}, '%')
      </if>
    </where>
  </select>

  <select id="getFood" parameterType="com.springboot.healthypath.food.FoodVO" resultType="com.springboot.healthypath.food.FoodVO">
    SELECT * FROM foods WHERE idx = #{idx}
  </select>

  <!-- 레시피 조회 -->
  <select id="getRecipes" parameterType="com.springboot.healthypath.food.RecipeVO" resultType="com.springboot.healthypath.food.RecipeVO">
    SELECT *
    FROM recipes
    <where>
      <if test="search_category != null and !search_category.isEmpty()">
        AND ckg_knd_acto_nm = #{search_category}
      </if>
      <if test="included_foods != null and !included_foods.isEmpty()">
        AND ckg_mtrl_cn LIKE CONCAT('%', #{included_foods}, '%')
      </if>
      <if test="excluded_foods != null and !excluded_foods.isEmpty()">
        AND ckg_mtrl_cn NOT LIKE CONCAT('%', #{excluded_foods}, '%')
      </if>
    </where>
    ORDER BY srap_cnt DESC
    LIMIT #{limit} OFFSET #{offset}
  </select>

  <!-- 레시피 총 개수 조회 -->
  <select id="getTotalCount" parameterType="com.springboot.healthypath.food.RecipeVO" resultType="int">
    SELECT COUNT(*)
    FROM recipes
    <where>
      <if test="search_category != null and !search_category.isEmpty()">
        AND ckg_knd_acto_nm = #{search_category}
      </if>
      <if test="included_foods != null and !included_foods.isEmpty()">
        AND ckg_mtrl_cn LIKE CONCAT('%', #{included_foods}, '%')
      </if>
      <if test="excluded_foods != null and !excluded_foods.isEmpty()">
        AND ckg_mtrl_cn NOT LIKE CONCAT('%', #{excluded_foods}, '%')
      </if>
    </where>
  </select>

</mapper>

